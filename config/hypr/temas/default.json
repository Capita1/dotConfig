{
"group/hardware": {
	"orientation": "inherit",
	"drawer": {
		"transition-duration": 300,
		"children-class": "not-memory",
		"transition-left-to-right": false
	},
	"modules": ["battery","cpu","memory","disk","backlight","bluetooth",],
},
"group/music": {
	"orientation": "inherit",
	"drawer": {
		"transition-duration": 300,
		"children-class": "not-memory",
		"transition-left-to-right": false,
	},
	"modules": ["custom/playing","custom/music","custom/previous","custom/next",]
},
"custom/menu": {
	"format": "",
	"justify": "center",
	"on-click": "sh ~/.config/hypr/scripts/menus",
	"on-click-right": "wpaperctl next",
	"tooltip":false,
},
//MUSICA
"custom/music": {
	"format": "{}",
	"justify": "center",
	"exec":"sh ~/.config/hypr/scripts/musica tocando",
	"on-click": "sh ~/.config/hypr/scripts/musica play-pause",
	"on-click-right": "sh ~/.config/hypr/scripts/musica select",
	"on-click-middle": "kitty -o font_size=1 cava",
	"on-scroll-up": "sh ~/.config/hypr/scripts/musica volume 0.05+",
	"on-scroll-down": "sh ~/.config/hypr/scripts/musica volume 0.05-",
	"tooltip":false,
	"interval": 1,
},
"custom/playing": {
	"format": "{}",
	"return-type": "json",
	"exec":"sh ~/.config/hypr/scripts/musica",
	"on-click": "sh ~/.config/hypr/scripts/musica select",
	"on-click-right": "kitty -o font_size=1 cava",
	"on-scroll-up": "sh ~/.config/hypr/scripts/musica volume 0.05+",
	"on-scroll-down": "sh ~/.config/hypr/scripts/musica volume 0.05-",
	"interval": 1,
	"tooltip":true,
	"escape":true,
},
"custom/next": {
	"format": "󰒭",
	"justify": "center",
	"on-click": "sh ~/.config/hypr/scripts/musica next",
	"on-click-right": "wpaperctl next",
	"tooltip":false,
},
"custom/previous": {
	"format": "󰒮",
	"justify": "center",
	"on-click": "sh ~/.config/hypr/scripts/musica previous",
	"on-click-right": "wpaperctl next",
	"tooltip":false,
},
//FIM MUSICA
"custom/notification": {
	"tooltip": false,
	"format": "{icon}",
	"format-icons": {
		"notification": "󱅫",
		"none": "󰂚",
		"dnd-notification": "󱅫",
		"dnd-none": "󰂛",
		"inhibited-notification": "󱅫",
		"inhibited-none": "󰂚",
		"dnd-inhibited-notification": "󱅫",
		"dnd-inhibited-none": "󰂛"
	},
	"return-type": "json",
	"exec-if": "which swaync-client",
	"exec": "swaync-client -swb",
	"on-click": "swaync-client -t -sw",
	"on-click-right": "swaync-client -d -sw",
	"escape": true
},
"backlight": {
	"device": "acpi_video1",
	"format": "󰍹 {icon}",
	"tooltip-format":"{percent}%",
	"format-icons": [
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		"",
		""
	],
	"scroll-step": 5
},
"bluetooth": {
	"format": "{icon}",
	"tooltip-format": "{status}",
	"interval": 30,
	"on-click": "rfkill toggle bluetooth",
	"on-click-right": "blueman-manager",
	"format-icons":{
		"on":"󰂯 ",
		"disabled":"󰂯 ",
		"no-controller":"󰂯 󰘚",
	},
},
"clock": {
	"timezone": "America/Sao_Paulo",
	"format": "󰥔 {:%H:%M}",
	"interval":30,
	"format-alt": " {:%d/%m/%Y}",
	"format-alt-click": "click-left",
	"tooltip-format": "<tt><small>{calendar}</small></tt>",
	"calendar": {
		"mode": "month",
		"weeks-pos": "right",
		"format": {
			"months": "<span><b>{}</b></span>",
			"days": "<span><b>{}</b></span>",
			"weeks": "<span color='gray'><b>W{}</b></span>",
			"weekdays": "<span color='grey'><b>{}</b></span>",
			"today": "<span color='white'><b><u>{}</u></b></span>"
		},
	},
	"actions": {
		"on-click-forward": "shift_up",
		"on-click-backward": "shift_down",
		"on-scroll-up": "shift_up",
		"on-scroll-down": "shift_down"
	}
},	
"battery": {
	"format": "󰂍 {icon}", 
	"tooltip-format": "{capacity}%",
	"format-charging": "󰂄 {icon}",
	"format-plugged": " {icon}",
	"format-icons":[
		"󰁺",
		"󰁻",
		"󰁼",
		"󰁽",
		"󰁾",
		"󰁿",
		"󰂀",
		"󰂁",
		"󰂂",
		"󰁹"
	]
},
"network": {
	"on-click": "kitty nmtui",
	"format-wifi": "",
	"format-ethernet":"",
	"format-disconnected": "",
	"tooltip-format": "{ipaddr}",
	"tooltip-format-wifi": "{essid} ({signalStrength}%)  | {ipaddr}",
	"tooltip-format-ethernet": "{ifname} ether | {ipaddr}",
},
"pulseaudio": {
	"format": "{icon}",
	"tooltip-format": "{volume}%",
	"justify": "center",
	"max-volume": 100,
	"scroll-step": 5,
	"format-icons": {
		"format-muted": " ",
		"default": [" "," "," "],
	},
	"on-click": "pavucontrol",
	"on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
},
"cpu": {
	"interval": 1,
	"format":"󰻠 {usage}%",
},
"memory": {
	"interval": 5,
	"format": " {percentage}%",
	"tooltip-format": "{used:0.1f}GiB usado",
},
"disk": {
	"interval": 30,
	"format": "󰋊 {percentage_used}%",
	"path": "/",
	"tooltip": true,
	"unit": "GB",
	"tooltip-format": "{free} de {total} Disponível"
},
"hyprland/workspaces": {
	"persistent-workspaces": {
		"*":[1,2,3,4,5],
	},
	"all-output": true,
	"active-only": false,
	"on-scroll-up": "hyprctl dispatch workspace r+1",
	"on-scroll-down": "hyprctl dispatch workspace r-1",
	"on-click-forward": "hyprctl dispatch workspace r+1",
	"on-click-backward": "hyprctl dispatch workspace r-1",
	"format": "{icon}{windows}",
	"format-icons":{
		"1":"¹",
		"2":"²",
		"3":"³",
		"4":"⁴",
		"5":"⁵",
		"6":"⁶",
		"7":"⁷",
		"8":"⁸",
		"9":"⁹",
		"10":"¹⁰",
	},
	"format-window-separator": "<span color='gray'><b> + </b></span>",
	"window-rewrite-default": "",
	"window-rewrite":{
		//Apps
		"class<kitty>": "",
		"class<blender>": "󰂫",
		"class<anki>": "",
		"class<thunar>": "",
		"class<librewolf>": "",
		"class<thorium-browser>": "",
		"class<zen-alpha>": "",
		"title<.*torrent.*>": "󱑤",
		"class<scrcpy>": "",
		"class<com.obsproject.Studio>": "󰑋",
		//Multimidia
		"class<mpv>": "",
		"class<vlc>": "",
		"class<com.stremio.stremio>": "",
		//Jogo
		"class<steam>": "󰓓",
		"class<lutris>": "",
		"title<.*minecraft.*>": "󰍳",
		"class<ru-turikhay-tlauncher-bootstrap-Bootstrap>": "󰍳",
		//Texto
		"class<kitty> title<.*nvim.*>": "",
		"class<mousepad>": "",
		"class<obsidian>": "",
		"class<neovide>": "",
		"class<org.pwmt.zathura>": "",
		"class<libreoffice>": "",
		"class<libreoffice-calc>": "󰈛",
		"class<libreoffice-writer>": "󰈬",
		"class<libreoffice-impress>": "󰈧",
		//Geral
		"title<.*BTCUSD.*>":"",
		"title<.*MONERO.*>":"",
		"title<.*bluetooth.*>":"",
		"title<.*volume.*>":"",
		"title<.*telegram.*>": "",
		"title<.*whatsapp.*>": "󰖣",
		"title<.*instagram.*>": "",
		"title<.*discord.*>": "󰙯",
		"title<.*gmail.*>": "",
		"title<.*outlook.*>": "",
		"title<.*youtube.*>": "󰗃",
		"title<.*github.*>": "", 
	},
},

}