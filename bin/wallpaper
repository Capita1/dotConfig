#!/bin/bash
wallpapers=/home/$(whoami)/Imagens/Wallpapers/
cd $wallpapers
#se wofi estiver rodando
if pgrep -x "wofi" > /dev/null
then
	killall wofi
	exit 0
fi
sele=$(echo -e "0: 󰋩 Escolher um Wallpaper \n1: 󰉏 Escolher uma pasta\n2: 󰋹 Todos" | wofi -d | cut -d ':' -f 1)
case "$sele" in		
	0) foto="$(find . -type f | cut -d '/' -f 2,3,4,5 | wofi -d)";;
	1) foto="$(ls -h | wofi -d)";;
	2) foto=""
esac
#se $foto não estiver vazio
if [ -n "$foto" ]; then
	echo -e "[HDMI-A-1]\npath = "$foto"\nduration="5m"\nmode="stretch"\n" 
	notify-send -e "$(echo -e "$wallpapers$foto")" -h string:x-canonical-private-synchronous:anything -t 2000
	exit 0
else
	exit 0
fi