{
"clock": {
	"timezone": "America/Sao_Paulo",
	"format": "󰥔 {:%H:%M}",
	"interval":30,
	"format-alt": " {:%d/%m/%Y}",
	"format-alt-click": "click-left",
	"tooltip-format": "<tt><small>{calendar}</small></tt>",
	"calendar": {
		"mode": "month",
		"weeks-pos": "right",
		"format": {
			"months": "<span><b>{}</b></span>",
			"days": "<span><b>{}</b></span>",
			"weeks": "<span color='gray'><b>W{}</b></span>",
			"weekdays": "<span color='grey'><b>{}</b></span>",
			"today": "<span color='white'><b><u>{}</u></b></span>"
		},
	},
	"actions": {
		"on-click-forward": "shift_up",
		"on-click-backward": "shift_down",
		"on-scroll-up": "shift_up",
		"on-scroll-down": "shift_down"
	}
},
"custom/music": {
	"format": "{}",
	"exec":"sh ~/.config/hypr/scripts/musica bar",
	"on-click": "playerctl --player vlc play-pause",
	"on-click-right": "kitty cava",
	"tooltip":false,
	"interval": 1,
},		
"battery": {
	"states": {
		// "good": 95,
		"warning": 30,
		"critical": 15
	},
	"format": "{icon}",
	"tooltip-format": "{capacity}%",
	"format-charging": "󰂄",
	"format-plugged": "󱐋",
	"format-alt": "{icon}{time}",
	// "format-good": "",
	// "format-full": "",
	"format-icons": ["", "", "", "", ""]
},
"custom/menu": {
	"format": "",
	"justify": "center",
	"on-click": "sh ~/.config/hypr/scripts/menus",
	"on-click-right": "wpaperctl next",
	"tooltip":false,
},
"backlight": {
	"device": "acpi_video1",
	"format": "",
	"tooltip-format":"{percent}%",
	"scroll-step": 5,
},
"network": {
	"on-click": "kitty nmtui",
	"format-wifi": "",
	"format-ethernet":"",
	"format-disconnected": "",
	"tooltip-format": "{ipaddr}",
	"tooltip-format-wifi": "{essid} ({signalStrength}%)  | {ipaddr}",
	"tooltip-format-ethernet": "{ifname} ether | {ipaddr}",
},
"pulseaudio": {
	"format": "{icon}",
	"tooltip-format": "{volume}%",
	"justify": "center",
	"max-volume": 100,
	"scroll-step": 5,
	"format-icons": {
		"format-muted": " ",
		"default": [" "," "," "],
	},
	"on-click": "pavucontrol",
	"on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
},
"cpu": {
	"interval": 1,
	"format":"󰻠 {usage}%",
},
"memory": {
	"interval": 5,
	"format": " {percentage}%",
	"tooltip-format": "{used:0.1f}GiB usado",
},
"disk": {
	"interval": 30,
	"format": "󰋊 {percentage_used}%",
	"path": "/",
	"tooltip": true,
	"unit": "GB",
	"tooltip-format": "{free} de {total} Disponível"
},
"custom/notification": {
	"tooltip": false,
	"format": "{icon}",
	"format-icons": {
		"notification": "󱅫",
		"none": "󰂚",
		"dnd-notification": "󱅫",
		"dnd-none": "󰂛",
		"inhibited-notification": "󱅫",
		"inhibited-none": "󰂚",
		"dnd-inhibited-notification": "󱅫",
		"dnd-inhibited-none": "󰂛"
	},
	"return-type": "json",
	"exec-if": "which swaync-client",
	"exec": "swaync-client -swb",
	"on-click": "swaync-client -t -sw",
	"on-click-right": "swaync-client -d -sw",
	"escape": true
},
"hyprland/workspaces": {
	"on-scroll-up": "hyprctl dispatch workspace r+1",
	"on-scroll-down": "hyprctl dispatch workspace r-1",
	"format": "{icon}{windows}",
	"format-icons":{
		"1":"¹",
		"2":"²",
		"3":"³",
		"4":"⁴",
		"5":"⁵",
		"6":"⁶",
		"7":"⁷",
		"8":"⁸",
		"9":"⁹",
		"10":"¹⁰",
	},
	"format-window-separator": "<span color='gray'><b> + </b></span>",
	"window-rewrite-default": "",
	"window-rewrite":{
		//Apps
		"class<kitty>": "",
		"class<blender>": "󰂫",
		"class<anki>": "",
		"class<thunar>": "",
		"class<librewolf>": "",
		"class<org.telegram.desktop>": "",
		"class<thorium-browser>": "",
		"title<.*torrent.*>": "󱑤",
		"class<scrcpy>": "",
		"class<.*waydroid.*>": "",
		"class<com.obsproject.Studio>": "󰑋",
		//Multimidia
		"class<mpv>": "",
		"class<vlc>": "",
		"class<com.stremio.stremio>": "",
		//Jogo
		"class<steam>": "󰓓",
		"class<lutris>": "",
		"title<.*minecraft.*>": "󰍳",
		"class<ru-turikhay-tlauncher-bootstrap-Bootstrap>": "󰍳",
		//Texto
		"class<kitty> title<.*nvim.*>": "",
		"class<mousepad>": "",
		"class<neovide>": "",
		"class<org.pwmt.zathura>": "",
		"class<libreoffice>": "",
		"class<libreoffice-calc>": "󰈛",
		"class<libreoffice-writer>": "󰈬",
		//Geral
		"title<.*BTCUSD.*>":"",
		"title<.*MONERO.*>":"",
		"title<.*bluetooth.*>":"",
		"title<.*volume.*>":"",
		"title<.*telegram.*>": "",
		"title<.*whatsapp.*>": "󰖣",
		"title<.*instagram.*>": "",
		"title<.*discord.*>": "󰙯",
		"title<.*gmail.*>": "",
		"title<.*outlook.*>": "",
		"title<.*youtube.*>": "󰗃",
		"title<.*github.*>": "", 
	},
},
}