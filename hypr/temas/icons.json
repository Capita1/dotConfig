		"class<kitty>": "",
		"class<blender>": "󰂫",
		"class<anki>": "",
		"class<thunar>": "",
		"class<librewolf>": "",
		"class<org.telegram.desktop>": "",
		"class<thorium-browser>": "",
		"title<.*torrent.*>": "󱑤",
		"class<scrcpy>": "",
		"class<com.obsproject.Studio>": "󰑋",
		//Multimidia
		"class<mpv>": "",
		"class<vlc>": "",
		"class<com.stremio.stremio>": "",
		//Jogo
