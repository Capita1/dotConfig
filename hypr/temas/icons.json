{
"hyprland/workspaces": {
	"on-scroll-up": "hyprctl dispatch workspace r+1",
	"on-scroll-down": "hyprctl dispatch workspace r-1",
	"format": "{icon}{windows}",
	"format-icons":{
		"1":"¹",
		"2":"²",
		"3":"³",
		"4":"⁴",
		"5":"⁵",
		"6":"⁶",
		"7":"⁷",
		"8":"⁸",
		"9":"⁹",
		"10":"¹⁰",
	},
	"format-window-separator": "<span color='gray'><b> + </b></span>",
	"window-rewrite-default": "",
	"window-rewrite":{
